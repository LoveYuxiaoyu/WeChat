/* pages/movies/movies.wxss */
.moviesCont {
  display:flex;
  padding: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-bottom: 1px solid #cccccc;
}

.movieImg {
  width: 128rpx;
  height: 128rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.movie_detail {
  display: flex;
  flex-direction: column;
  width: 70%;
  max-lines: 20rpx;
}

.movie_name {
  font-size: 32rpx;
}

.movie_year {
  font-size: 28rpx;
  color: #666;
  margin: 8rpx 0;
}

.movie_director {
  font-size: 30rpx;
  color: #333;
}

.movie_rating {
  font-size: 40rpx;
  color:red;
  font-weight: bold;
}