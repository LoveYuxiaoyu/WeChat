<!-- pages/movies/movies.wxml -->
<view wx:for="{{moviesArr}}" wx:key="index">
  <view class="moviesCont">
    <image class="movieImg" src="{{item.cover}}"></image>
    <view class="movie_detail">
      <text class="movie_name">{{item.title}}</text>
      <text class="movie_year">年份：1993</text>
      <text class="movie_director">陈凯歌</text>
    </view>
    <text class="movie_rating">{{item.rate}}</text>
  </view>
</view>