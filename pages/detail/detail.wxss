/* pages/detail/detail.wxss */
.detailCont {
  display: flex;
  flex-direction: column;
}

.playMusic {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.8;
  position: absolute;
  left: 50%;
  top: 230rpx;
  transform: translate(-50%, -50%);
}

.headImg {
  width: 100%;
  height: 460rpx;
}

.avatar_date {
  display: flex;
  align-items: center;
  margin: 10rpx;
}

.avatar_date image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.avatar_date text {
  margin-right: 20rpx;
}

.company {
  font-size-adjust: 38rpx;
  font-weight: 700;
  margin: 0 10rpx 10rpx;
}

.collection_share {
  float: right;
  margin-right: 30rpx;
  position: relative;
  z-index: 1;
}

.collection_share image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}

.line {
  width: 90%;
  height: 1rpx;
  background-color: #ccc;
  position: relative;
  left: 50%;
  top: 45rpx;
  transform: translateX(-50%);
}

.share {
  width: 240rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 0;
  padding: 0;
  font-weight: 600;
}

.content {
  font-size:32rpx;
  text-indent: 64rpx;
  margin: 10rpx;
  margin-top: 20rpx;
}