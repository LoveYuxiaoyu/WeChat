.tplCont {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.template-title image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin: 10rpx;
}

.template-title text {
  font-size: 32rpx;
}

.template-desc {
  font-size: 36rpx;
  font-weight: 700;
  margin: 0 10rpx 10rpx;
}

.contImg {
  width: 100%;
  height: 460rpx;
}

.content {
  width: 100%;
  font-size: 32rpx;
  text-indent: 2em;
  margin: 10rpx;
}


.collection image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin: 10rpx;
}

.collection text {
  font-size: 28rpx;
  margin: 10rpx 0;
}